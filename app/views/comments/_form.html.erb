<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <div class="form-group">
    <% form.label :commenter %><br>
    <%= form.text_field :commenter, class:"form-control", placeholder:"Commenter" %>
  </div>
  <div class="form-group">
    <% form.label :body %><br>
    <%= form.text_area :body, size: "30x5", class:"form-control", placeholder:"Body" %><br>
  </div>
  <div>
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>











