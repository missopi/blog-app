<%= form_with model: article do |form| %>
  <div class="form-group">
    <% form.label :title %><br>
    <%= form.text_field :title, class:"form-control", placeholder:"Title" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <% form.label :body %><br>
    <%= form.text_area :body, size: "30x10", class:"form-control", placeholder:"Body" %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit class:"btn btn-secondary" %>
    <%= link_to "Back", :back, class:"btn btn-dark" %>
    <%= link_to "Delete this article", @article, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class:"btn btn-danger" %>
  </div>
<% end %>
